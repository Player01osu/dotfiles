# Relative mouse move
super + alt + ctrl + h
    xdotool mousemove_relative -- -15 0

super + alt + ctrl + j
    xdotool mousemove_relative -- 0 15

super + alt + ctrl + k
    xdotool mousemove_relative -- 0 -15

super + alt + ctrl + l
    xdotool mousemove_relative -- 15 0

# mouse click key chord
alt + u ; {m,n}
    {xdotool click 1,xdotool click 3}

XF86Sleep
    betterlockscreen -l blur
