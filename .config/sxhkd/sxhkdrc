
# start clients
alt + t ; {h,j,d,p,s,f,z}
	{alacritty -o font.size=7.0 --class btop -e btop,firefox-developer-edition &,ripcord &,alacritty --class pulsemixer -e pulsemixer,steam &,toggle_fcitx,boomer}

# anki tools
alt + l ; {a,s,o,f,r}
    {screen-anki, screen-anki -s, screen-anki-occlude, screen-anki -f, screen-anki -r}

# restart clients
alt + r ; {p,s,d,m}
    {~/.local/bin/rpipe,~/.local/bin/rkd,rdblk,rpd}

# run scripts
alt + s ; {l,j,p}
	{browser_link_copy,copypastelink,savepixiv}

# mpd control
XF86AudioPlay
    playerctl --player=mpd play-pause

super + Up
    playerctl --player=mpd play-pause

XF86AudioNext
    playerctl --player=mpd next

super + Right
    playerctl --player=mpd next

XF86AudioPrev
    playerctl --player=mpd previous

super + Left
    playerctl --player=mpd previous

XF86Launch1
    toggle_touch


# yuri download macro
super + alt + b
    yuridl.sh

# Bookmarks
super + u
    bookmarks

super + shift + u
    bookmarksnw

super + ctrl + u
    addbookmark

super + shift + ctrl + u
    removebookmark

# Anime selection dmenu
#super + a
#    dani
super + a
    aniki

# scroll left
super + alt + h
    xdotool click 6

# scroll down
super + alt + j
    xdotool click 5

# scroll up
super + alt + k
    xdotool click 4

# scroll right
super + alt + l
    xdotool click 7

# ctrl + left click
super + ctrl + m
    xdotool click 1

# mouse click key chord
alt + u ; {m,n}
    {xdotool click 1,xdotool click 3}

super + shift + a
    anki_audio
