alt + r ; {p,s,d,m}
    {~/.local/bin/rpipe,~/.local/bin/rkd,rdblk,rpd}

# mpd control
XF86AudioPlay
    playerctl --player=mpd play-pause

XF86AudioNext
    playerctl --player=mpd next

XF86AudioPrev
    playerctl --player=mpd previous

# yuri download macro
super + alt + b
    yuridl.sh

# Bookmarks
super + u
    bookmarks

super + shift + u
    bookmarksnw

super + ctrl + u
    addbookmark

super + shift + ctrl + u
    removebookmark

# Anime selection dmenu
super + a
    dani

# scroll left
super + alt + h
    xdotool click 6

# scroll down
super + alt + j
    xdotool click 5

# scroll up
super + alt + k
    xdotool click 4

# scroll right
super + alt + l
    xdotool click 7

# ctrl + left click
super + ctrl + m
    xdotool click 1

# mouse click key chord
alt + u ; {m,n}
    {xdotool click 1,xdotool click 3}
