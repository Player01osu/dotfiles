
alt + t ; {h,j,d,p,s,n}
	{alacritty -e btop,firefox &,LIBVA_DRIVER_NAME=i915 discord --enable-gpu-rasterization &,alacritty -e pulsemixer,steam &,LIBVA_DRIVER_NAME=i915 nuclear --enable-gpu-rasterization &}

alt + r ; {p,s,d}
    {~/bin/rpulse,~/.local/bin/rkd,rdblk}

super + alt + b
    yuridl.sh

super + alt + w
    togglewheel


super + alt + h
    xdotool click 6

super + alt + j
    xdotool click 5

super + alt + k
    xdotool click 4

super + alt + l
    xdotool click 7

super + ctrl + m
    xdotool click 1

super + alt + t
    alacritty --class todo -e nvim ~/vimwiki/todo.wiki


