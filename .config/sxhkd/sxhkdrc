
alt + t ; {h,j,d,p,s,n}
	{alacritty -e btop,firefox &,LIBVA_DRIVER_NAME=i915 discord --enable-gpu-rasterization &,alacritty -e pulsemixer,steam &,LIBVA_DRIVER_NAME=i915 nuclear --enable-gpu-rasterization &}

alt + r ; {p,s,d,m}
    {~/.local/bin/rpipe,~/.local/bin/rkd,rdblk,rpd}

# mpd control
XF86AudioPlay
    playerctl --player=mpd play-pause

XF86AudioNext
    playerctl --player=mpd next

XF86AudioPrev
    playerctl --player=mpd previous


# yuri download macro
super + alt + b
    yuridl.sh

# toggle brrrr wheel
super + alt + w
    togglewheel


# scroll left
super + alt + h
    xdotool click 6

# scroll down
super + alt + j
    xdotool click 5

# scroll up
super + alt + k
    xdotool click 4

# scroll right
super + alt + l
    xdotool click 7

# ctrl + left click
super + ctrl + m
    xdotool click 1

# open todo list
super + alt + t
    alacritty --class todo -e nvim ~/vimwiki/todo.wiki


# top left + bottom left + top right + bottom right
super + alt + a
    xdotool mousemove 80 220

super + alt + s
    xdotool mousemove 80 870

super + alt + d
    xdotool mousemove 1830 220

super + alt + f
    xdotool mousemove 1830 870

